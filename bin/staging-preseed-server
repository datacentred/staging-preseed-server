#!/usr/bin/ruby

# Get our absolute local library path
local_lib = File.expand_path('../../lib', __FILE__)

# Get the absolute paths of our vendor libraries
vendor_lib = Dir[File.expand_path('../../vendor/ruby/*/gems/*/lib', __FILE__)]

# Add to the global search path
$LOAD_PATH.unshift(local_lib, *vendor_lib)

# Run the staging-preseed-server application
require 'staging-preseed-server/staging-preseed-server'

StagingPreseedServer.run!
